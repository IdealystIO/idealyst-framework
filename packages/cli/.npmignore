# Include everything from src by default
# but we'll explicitly list what we want

# Don't ignore dist (we need this)
!dist

# Don't ignore these critical dotfiles in template
!dist/template/.yarnrc.yml
!dist/template/.gitignore
!dist/template/.env.example
!dist/template/.dockerignore
!dist/template/**/.gitignore
!dist/template/**/.env.example

# Ignore source files
src/
template/
*.ts
!*.d.ts

# Ignore dev files
node_modules/
.git/
*.log
coverage/
.nyc_output/

# Ignore test files
__tests__/
*.test.ts
*.spec.ts
