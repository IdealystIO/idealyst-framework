{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "templates",
    "templates.old",
    "template",
    "__tests__",
    "src/generators/api.ts",
    "src/generators/database.ts",
    "src/generators/fullstack.ts",
    "src/generators/native.ts",
    "src/generators/shared.ts",
    "src/generators/web.ts",
    "src/generators/workspace.ts"
  ]
} 