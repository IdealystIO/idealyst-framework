{
  "name": "{{projectName}} Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  // Forward ports
  "forwardPorts": [
    3000,  // Web dev server
    3001,  // API server
    5173,  // Vite dev server
    8080,  // Additional dev server
    19006, // Expo dev tools
    5432,  // PostgreSQL
    6379,   // Redis
    3333    // Figma MCP server
  ],

  // Port attributes
  "portsAttributes": {
    "3000": {
      "label": "Web App",
      "onAutoForward": "openBrowser"
    },
    "3001": {
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "Additional Dev Server",
      "onAutoForward": "notify"
    },
    "19006": {
      "label": "Expo Dev Tools",
      "onAutoForward": "openBrowser"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis Cache",
      "onAutoForward": "silent"
    },
    "3333": {
      "label": "Figma MCP Server",
      "onAutoForward": "openBrowser"
    }
  },

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        // React Native/React development
        "ms-vscode.vscode-react-native",
        "msjsdiag.vscode-react-native",

        // TypeScript/JavaScript
        "ms-vscode.vscode-typescript-next",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",

        // General development
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-docker",
        "ms-vscode.vscode-markdown",
        "christian-kohler.path-intellisense",
        "formulahendry.auto-rename-tag",

        // Testing
        "orta.vscode-jest",
        "ms-vscode.test-adapter-converter",

        // Git
        "mhutchie.git-graph",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "typescript.preferences.includePackageJsonAutoImports": "auto",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        },
        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/.git/**": true,
          "**/dist/**": true,
          "**/coverage/**": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/coverage": true,
          "**/.yarn": true
        },
        "jest.jestCommandLine": "yarn test",
        "jest.autoRun": "off"
      }
    }
  },

  // Post-create command to set up the development environment
  "postCreateCommand": "bash .devcontainer/setup.sh"
}
