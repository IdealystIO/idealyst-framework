{
  "name": "@idealyst/theme",
  "version": "1.2.114",
  "description": "Theming system for Idealyst Framework",
  "readme": "README.md",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/IdealystIO/idealyst-framework.git",
    "directory": "packages/theme"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./unistyles": {
      "import": "./src/unistyles.ts",
      "require": "./src/unistyles.ts",
      "types": "./src/unistyles.ts"
    },
    "./plugin": {
      "import": "./src/babel/plugin.js",
      "require": "./src/babel/plugin.js"
    },
    "./extensions": {
      "import": "./src/extensions.ts",
      "require": "./src/extensions.ts",
      "types": "./src/extensions.ts"
    },
    "./config": {
      "import": "./src/config/index.ts",
      "require": "./src/config/index.ts",
      "types": "./src/config/index.ts"
    },
    "./lightTheme": {
      "import": "./src/lightTheme.ts",
      "require": "./src/lightTheme.ts",
      "types": "./src/lightTheme.ts"
    },
    "./darkTheme": {
      "import": "./src/darkTheme.ts",
      "require": "./src/darkTheme.ts",
      "types": "./src/darkTheme.ts"
    },
    "./animation": {
      "native": "./src/animation/index.native.ts",
      "import": "./src/animation/index.ts",
      "require": "./src/animation/index.ts",
      "types": "./src/animation/index.ts"
    }
  },
  "scripts": {
    "prepublishOnly": "echo 'Publishing TypeScript source directly'",
    "publish:npm": "npm publish"
  },
  "dependencies": {
    "@idealyst/tooling": "^1.2.114"
  },
  "peerDependencies": {
    "react-native-unistyles": ">=3.0.0"
