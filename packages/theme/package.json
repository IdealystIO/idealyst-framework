  "peerDependenciesMeta": {
    "react-native-unistyles": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@types/babel__core": "^7.20.0",
    "@types/react": "^19.1.0",
    "@types/react-native": "^0.73.0",
    "react-native-unistyles": ">=3.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "src",
    "README.md",
    "CLAUDE.md",
    "LLM-ACCESS-GUIDE.md"
  ],
  "keywords": [
    "theme",
    "styling",
    "react",
    "react-native",
    "cross-platform"
  ]
