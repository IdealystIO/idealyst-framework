{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@idealyst/theme": ["../../../../packages/theme/src/index.ts"],
      "@idealyst/theme/*": ["../../../../packages/theme/src/*"],
      "@idealyst/components": ["../../../../packages/components/src/index.ts"],
      "@idealyst/components/*": ["../../../../packages/components/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
} 